<% include partials/header %>


<div class = "container">
    <header class = "jumbotron">
        <div class = "container">
            <h1> Welcome to YelpCamp</h1>
            <p> View our hand-picked campgrounds from all over the world!</p>
            <p>
                <a class = "btn btn-primary btn-lg" href = "/campgrounds/new">Add New Campgrounds</a>
            </p>
        </div>
    </header>



    <div class = "row text-center" style = "display:flex; flex-wrap:wrap">
        <div class = "col-lg-12">
            <h3> Our most popular camps!</h3>
        </div>
            <% campgrounds.forEach(function(camp){ %>
                <div class = "col-md-3 col-sm-6">
                    <div class = "thumbnail">    <!--thumbnail class makes the little cards for us-->
                        <img src = "<%= camp.image %>">
                        <div class = "caption">
                            <h4><%= camp.name %></h4>
                        </div>
                        <p>
                            <!-- Use the randomly generated Mongo ID -->
                            <a href = "/campgrounds/<%=camp._id%>" class = "btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
         <% }); %>
    </div>
</div>


<% include partials/footer %>
